<body>
    <div class="row">
        <div class="col-8 offset-2" >
            <form method="post" novalidate class=" needs-validation" action="/mugic" enctype="multipart/form-data">
                <h2 class="mt-3">Uplode a New song</h2>
                <div  class="mb-3">
                    <label class="form-lable" for="title" for="title">Title :</label>
                    <input type="text" name="mugic[title]" id="title" placeholder="Add a catchy title" class="form-control" required>
                    <div class="valid-feedback">Looks Good Title!</div>
